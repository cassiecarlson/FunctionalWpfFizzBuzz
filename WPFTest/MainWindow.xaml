<Window x:Class="WPFTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <Label x:Name="OutputLabel" Content="Output" HorizontalAlignment="Center" Margin="192,89,180,0" VerticalAlignment="Top" Width="120" BorderThickness="1" BorderBrush="Black" FontSize="15"/>
        <TextBox x:Name="InputTextBox" HorizontalAlignment="Center" Height="23" Margin="192,126,180,0" TextWrapping="Wrap" Text="Input" VerticalAlignment="Top" Width="120" GotFocus="InputTextBox_GotFocus" BorderBrush="Black" FontSize="15"/>
        <Button x:Name="SubmitButton" Content="Button" HorizontalAlignment="Center" Margin="192,154,180,0" VerticalAlignment="Top" Width="120" Click="SubmitButton_Click" FontSize="15"/>
    </Grid>
</Window>
